        "literals": {  "$ref": "file:valueConstraintsLiteralsFieldContent.json" },
        "actions": { "$ref": "file:valueConstraintsActionsFieldContent.json" }
    },
    "required": [ "requiredValue" ],
    "additionalProperties": false
}

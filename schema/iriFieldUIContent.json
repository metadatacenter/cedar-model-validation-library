{
    "description": "Meta-schema that describes the schema of a '_ui' field of an IRI-valued template field",
    "type": "object",
    "properties": {
        "inputType": {
            "type": "string",
            "enum": [ "link", "controlled-term", "ext-ror", "ext-orcid", "ext-pfas" ]
        },
        "valueRecommendationEnabled": { "type": "boolean" },
        "hidden": { "type": "boolean" },
        "continuePreviousLine": { "type": "boolean" }
    },
    "required": [ "inputType" ],
    "additionalProperties": false
}
